<view class="content">
  <view>
    <image src="{{movie.images.large}}" mode='aspectFit' />
  </view>
  <view class="hr"></view>
  <view class="detail">
      <text>{{movie.text}}</text>
  </view>

  <view class="casts">
    <block wx:for="{{movie.casts}}">
        <image src="{{item.avatars.large}}" mode="aspectFit"></image>
    </block>

  </view>
  <view class="hr"></view>
  <view class="detail">
      <text>{{movie.summary}}</text>
  </view>
</view>